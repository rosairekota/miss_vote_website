{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <style>
    body {
        background-color: darkslategrey;
        margin: auto;
    }

    .form-group {
        margin: 40px;
        background-color: floralwhite;
        width: 100%;
        height: 100%;
        box-shadow: 100px 50px 200px #c4c1c1;
        padding: 40px 40px;
        /* marge interne*/
        border-radius: 5px;
        color: blue;

    }

    .form-control {
        /*margin: 20px; /* marge externe globale */
        margin-bottom: 20px;
        /* marge externe en bas*/
        border: 1px solid rgb(64, 64, 122);
        border-radius: 10px;
        width: 100%;
        height: 45px;

    }

    #btn-pro {

        border-radius: 10px;
        /* background-color: rgb(49, 49, 139);
        color: white; */
        cursor: pointer;
    }

    #btn-pro:hover {
        background-color: rgb(49, 49, 139);
        border: 1px solid rgb(49, 49, 139);
        color: rgb(244, 244, 248);
        ;

    }
</style>
<div class="container mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">

           <center>
                <form action="{{path('security_login')}}" method="POST" class="form-group">
                {% if error %}
                <div class="alert alert-danger mt-5 mb-3">
                    {{error.messageKey }}
                </div>
                {% endif %}

                <label for="email">Inserer votre Email</label>
                <input type="text" name="_username" id="email" class="form-control" value="{{last_username}}">

                <label for="password">Inserer votre Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" required>



                <input type="submit" class="genric-btn danger radius btn btn-block" value="Connecter" id="btn-pro">

            </form>
           </center>
        </div>

    </div>
</div>
{% endblock %}
